<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <style>
        * {
            margin: 0;
            padding: 0;
        } 

        .title {
            color: red;
        }
    </style>
    <div class="container">
    <h1 class="title">Карточки</h1>
    {% if test %}
        <span>Test</span>
    {% else %}
        <span>Test 1</span>
    {% endif %}
    {% for card in cards %}
        <div class="card d-flex bg-primary font-bold">
            <span class="card_title">{{card.title}}</span>
            <span class="body">{{card.body}}</span>
        </div>
    {% endfor %}

    <button class="btn btn-primary" id="add_card_btn">Добавить карточку</button>
    </div>

    <script>
        async function createCard(card) {
            const data = await axios.post('/card/', {
                body: JSON.stringify(card),
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            console.log(data)
        }
        
        const add_card_btn = document.querySelector('#add_card_btn')

        add_card_btn.addEventListener('click', (evt) => {
            createCard({
                tite: 'Тест',
                body: 'Тест'
            })
        })

    </script>
</body>
</html>